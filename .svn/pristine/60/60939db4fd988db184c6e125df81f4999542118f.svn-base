    /**
     * 处理websocket  握手
     * @param serverfork socket 对象
     * @return
     * @throws NoSuchAlgorithmException
     * @throws IOException
     */
    public boolean handlerShake0(Socket serverfork) throws NoSuchAlgorithmException, IOException{
    	boolean hasHandshake = false;
    	 InputStream in = serverfork.getInputStream();
         
    	 OutputStream out = serverfork.getOutputStream();
    	 ByteBuffer outm = ByteBuffer.allocate(12500);
         //PrintWriter pw = getWriter(serverfork);
         //读入缓存
         byte[] buf = new byte[1024];
         //读到字节
         int len = in.read(buf, 0, 1024);
         //读到字节数组
         byte[] res = new byte[len];
         System.arraycopy(buf, 0, res, 0, len);
         String key = new String(res);
         if(key.indexOf("Key") > 0){
             //握手
             key = key.substring(0, key.indexOf("==") + 2);
             key = key.substring(key.indexOf("Key") + 4, key.length()).trim();
             key+= "258EAFA5-E914-47DA-95CA-C5AB0DC85B11";
             MessageDigest md = MessageDigest.getInstance("SHA-1");  
             md.update(key.getBytes("utf-8"), 0, key.length());
             byte[] sha1Hash = md.digest();  
                 sun.misc.BASE64Encoder encoder = new sun.misc.BASE64Encoder();  
             key = encoder.encode(sha1Hash);  
             outm.put("HTTP/1.1 101 Switching Protocols\r\n".getBytes());
             outm.put("Upgrade: websocket\r\n".getBytes());
             outm.put("Connection: Upgrade\r\n".getBytes());
             outm.put(("Sec-WebSocket-Accept: " + key+"\r\n").getBytes());
             outm.put("\r\n".getBytes());
//             pw.println("HTTP/1.1 101 Switching Protocols");
//             pw.println("Upgrade: websocket");
//             pw.println("Connection: Upgrade");
//             pw.println("Sec-WebSocket-Accept: " + key);
//             pw.println();
//             pw.flush();
             outm.flip();
             System.out.println("limit="+outm.limit());
             out.write( outm.array(), 0, outm.limit());
             out.flush();
             hasHandshake = true;
         }
    	return hasHandshake;
    }
    
