				while (payloadLength > 0) {
					int masked = in.read();
					masked = masked
							^ (mask[(int) ((readThisFragment - 1) % 4)] & 0xFF);
					byteBuf.put((byte) masked);
					payloadLength--;
					readThisFragment++;
				}
