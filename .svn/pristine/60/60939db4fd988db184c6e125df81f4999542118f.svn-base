    /**
     * 启动websocket 服务器
     * @throws IOException
     */
    private void start() throws IOException{
		ServerSocket server = new ServerSocket(ConstantUtil.WEBSOCKETPORT);
		logger.log(Level.INFO, SocketConstant.SYSTEMOUT.getRssURL() +"websocket 监听 端口" + ConstantUtil.WEBSOCKETPORT);
		
		int ErrorTimes = 0;
		boolean  overRun = false;
		
		ExecutorService pool =
			    Executors.newFixedThreadPool(2);
		while (!overRun) {
			try {
				final Socket ss = server.accept();
				if (handlerShake0(ss))
					pool.execute((new ServerThread1(ss)));
				
			} catch (IOException e) {

				logger.log(Level.INFO, SocketConstant.ERROROUT.getRssURL() + "socket 接收连接出现异常，但是不能终止socket主线程，继续接收新的连接");
				ErrorTimes ++;
				if(ErrorTimes>=5){
					logger.log(Level.INFO, SocketConstant.ERROROUT.getRssURL() +"已经出现五次以上连接异常，关闭socket主程序");
					overRun = true;
				}
			
			} catch (NoSuchAlgorithmException e1) {
				
				logger.log(Level.INFO, SocketConstant.ERROROUT.getRssURL() + "socket 接收连接出现异常，但是不能终止socket主线程，继续接收新的连接");
				ErrorTimes ++;
				if(ErrorTimes>=5){
					logger.log(Level.INFO, SocketConstant.ERROROUT.getRssURL() +"已经出现五次以上连接异常，关闭socket主程序");
					overRun = true;
				}
			} 
		}
		
		List<Runnable> runnables = pool.shutdownNow();
		logger.log(Level.INFO, SocketConstant.SYSTEMOUT.getRssURL() + "还有 "+runnables.size()+" 个连接，在等待验证");
		logger.log(Level.INFO, SocketConstant.SYSTEMOUT.getRssURL() +"关闭websocket 主程序，不接收新的socket连接，关闭所有现有socket连接");
    	
    }
    
